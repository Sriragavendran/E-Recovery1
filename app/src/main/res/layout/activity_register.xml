<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".registerActivity">

    <EditText
        android:id="@+id/repass"
        android:layout_width="285dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Re-enter Password"
        android:background="#F1E8EC"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="285dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Password"
        android:background="#F1E8EC"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hcode" />

    <EditText
        android:id="@+id/patientName"
        android:layout_width="285dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Patient Name"
        android:background="#F1E8EC"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/patientid"
        android:layout_width="285dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Email_Id"
        android:background="#F1E8EC"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientName" />

    <EditText
        android:id="@+id/hcode"
        android:layout_width="285dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="#F1E8EC"
        android:ems="10"
        android:hint="Hospital code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientid" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repass"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="413dp"
        android:layout_height="49dp"
        android:background="#0C470F"
        android:gravity="center_horizontal"
        android:text="REGISTER"
        android:textColor="@android:color/background_light"
        android:textSize="33dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:gravity="center_horizontal"
        android:text="OR"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>